<div class="container" style="height: 65.6px;">
  <% if (notice) { %>
    <a href="/notice/<%= notice._id %>" class="noticeContainer">
      <button class="notice" type="button">
        <div class="inside noticeInside" style="display: inline-block; float: left; clear: none;">
          <label class="noticeInsideTitle" style="display: table-cell; font-weight: bold; float: left;"><%= notice.title.substr(0, 10) + (notice.title.length > 10 ? '...' : '') %></label>
          <label class="noticeInsideBody" style="display: table-cell; overflow: hidden; float: right; height: 20px;"><%= notice.body.replace(/(\<.*?\>)/g, '').substr(0, 60) %></label>
        </div>
      </button>
    </a>
  <% } %>
  <div class="buttons">
    <% if (!user) { %>
      <a href="/users/new"><button type="button">회원가입</button></a>
      <a href="/login"><button type="button" class="lineBtn">로그인</button></a>
    <% } else { %>
      <a href="/users"><button type="button" class="<%= user.admin === true ? 'admin' : '' %>"><%= user.name %>님</button></a>
      <a href="/logout"><button type="button">로그아웃</button></a>
    <% } %>
  </div>
</div>
